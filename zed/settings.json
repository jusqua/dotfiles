{
  "vim_mode": true,
  "git": {
    "inline_blame": {
      "enabled": false,
    },
  },
  "languages": {
    "C++": {
      "formatter": {
        "external": {
          "command": "clang-format",
          "arguments": ["--style=file", "--assume-filename={buffer_path}"],
        },
      },
      "format_on_save": "on",
    },
    "C": {
      "formatter": {
        "external": {
          "command": "clang-format",
          "arguments": ["--style=file", "--assume-filename={buffer_path}"],
        },
      },
      "format_on_save": "on",
    },
  },
}
